<%- include('head') %>
<body>
    <div class = "main">
        <div class = "overflow">
            <div class = "head">
                <a href = "/profile/" class = "hItem">клиент</a>
                <a href = "/order/" class = "hItem">закази</a>
                <a href = "/try-on/" class = "hItem">примерка</a>
                <a href = "/balance/" class = "hItem">баланс клиента</a>
                <a href = "/entered-materials/" class = "hItem">поступивший материал</a>
                <a href = "" class = "hItem">склад</a>
                <a href = "" class = "hItem">услуги</a>
                <a href = "" class = "hItem">расходы</a>
                <a href = "" class = "hItem">сост ... склад</a>
            </div>
            <div class = "title">
                <h1>добавить поступивший материал</h1>
            </div>
            <form class = "orderCont" action = "/entered-materials/add" method = "post">
                <% if(!notFill) { %>
                    <h2 class = "warning">заполните поля</h2>
                <% } %>
                <div class = "sectionCont">
                    <div class = "section">
                        <p class = "<%- (enteredMaterials.typeOperation || notFill) ? '' : 'error' %>">тип операции</p>
                        <select name = "typeOperation" id = "typeOperation">
                            <option value = "">выберите тип операции</option>
                            <% operation.forEach((item) => { %>
                                <% if(enteredMaterials.typeOperation == item.value) { %>
                                    <option selected value = <%- item.value %>><%= item.name %></option>
                                <% } else { %>
                                    <option value = <%- item.value %>><%= item.name %></option>
                                <% } %>
                            <% }) %>
                        </select>
                        <p class = "<%- (enteredMaterials.dateOperation || notFill) ? '' : 'error' %>">дата заказа</p>
                        <input type = "date" name = "dateOperation" id = "date">
                        <p class = "<%- (enteredMaterials.document || notFill) ? '' : 'error' %>">документ</p>
                        <select name = "document" id = "document">
                            <option value = "">выберите</option>
                            <% document.forEach(item => { %>
                                <% if(enteredMaterials.document == item.value) { %>
                                    <option selected value = <%- item.value %>><%= item.name %></option>
                                <% } else { %>
                                    <option value = <%- item.value %>><%= item.name %></option>
                                <% } %>
                            <% }) %>
                        </select>
                        <p>примечание</p>
                        <textarea name = "noticeOperation" id = "noticeOperation" cols="25" rows="5"></textarea>
                    </div>
                    <div class = "section">
                        <p class = "<%- (enteredMaterials.sumEnter || notFill) ? '' : 'error' %>">сумма прихода</p>
                        <input type = "number" name = "sumEnter" id = "sumEnter">
                        <p class = "<%- (enteredMaterials.paidStatus || notFill) ? '' : 'error' %>">статус</p>
                        <select name = "paidStatus" id = "paidStatus">
                            <option value = "">выберите статус</option>
                            <% statusPaid.forEach(item => { %>
                                <% if(enteredMaterials.paidStatus == item.value) { %>
                                    <option selected value = <%- item.value %>><%= item.name %></option>
                                <% } else { %>
                                    <option value = <%- item.value %>><%= item.name %></option>
                                <% } %>
                            <% }) %>
                        </select>
                        <p class = "<%- (enteredMaterials.supplier || notFill) ? '' : 'error' %>">поставщик</p>
                        <input type = "text" name = "supplier" id = "supplier">
                    </div>
                </div>
                <div class = "buttonCont">
                    <a class = "cancel cancelHover" href = "./profileOrder.html">назад</a>
                    <input class = "submit buttonHover" type = "submit" value = "добавить">
                </div>
            </form>
        </div>
    </div>
</body>
<script>
let typeOrder = document.getElementById('typeOrder')
let sumOrder = document.getElementById('sumOrder')
let paid = document.getElementById('paid')
let debt = document.getElementById('debt')
let form = document.getElementsByClassName('orderCont')
let template = document.getElementById('template')
const ordersPrice = {
    sharf: 1000,
    shapka: 25000
}
const handleChange = () => sumOrder.value = ordersPrice.sharf

const handleDebt = () => debt.value = sumOrder.value - paid.value 

</script>
</html>