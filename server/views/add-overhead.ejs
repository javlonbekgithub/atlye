<%- include('head') %>
<body>
    <div class = "main">
        <div class = "overflow">
            <div class = "head">
                <a href = "/profile/" class = "hItem">клиент</a>
                <a href = "/order/" class = "hItem">закази</a>
                <a href = "/try-on/" class = "hItem">примерка</a>
                <a href = "/balance/" class = "hItem">баланс клиента</a>
                <a href = "/entered-materials/" class = "hItem">поступивший материал</a>
                <a href = "/overhead-list/" class = "hItem">склад</a>
                <a href = "" class = "hItem">услуги</a>
                <a href = "" class = "hItem">расходы</a>
                <a href = "" class = "hItem">сост ... склад</a>
            </div>
            <div class = "title">
                <h1>добавить накладной</h1>
            </div>
            <form class = "orderCont" action = "./add" method = "post">
                <% if(!notFill) { %>
                    <h2 class = "warning">заполните поля</h2>
                <% } %>
                <div class = "sectionCont">
                    <div class = "section">
                        <p class = "<%- (overhead.codeGoods || notFill) ? '' : 'error' %>">код товара</p>
                        <select name = "codeGoods" id = "codeGoods">
                            <option value = "">выберите код товара</option>
                            <% goodsCode.forEach((item) => { %>
                                <% if(overhead.codeGoods == item.value) { %>
                                    <option selected value = <%- item.value %>><%= item.name %></option>
                                <% } else { %>
                                    <option value = <%- item.value %>><%= item.name %></option>
                                <% } %>
                            <% }) %>
                        </select>
                        <p class = "<%- (overhead.artikul || notFill) ? '' : 'error' %>">артикуль</p>
                        <input value = "<%- (overhead.artikul) ? overhead.artikul : '' %>" type = "text" name = "artikul" id = "artikul">
                        <p class = "<%- (overhead.goods || notFill) ? '' : 'error' %>">товар</p>
                        <input value = "<%- (overhead.goods) ? overhead.goods : '' %>" type = "text" name = "goods" id = "goods">
                        <p class = "<%- (overhead.priceForOne || notFill) ? '' : 'error' %>">цена за 1пм(кг)</p>
                        <input value = "<%- (overhead.priceForOne) ? overhead.priceForOne : '' %>" type = "number" name = "priceForOne" id = "priceForOne">
                        <p>примечание</p>
                        <textarea name = "noticeOverhead" id = "noticeOverhead" cols="25" rows="5"></textarea>
                    </div>
                    <div class = "section">
                        <p class = "<%- (overhead.unityMeter || notFill) ? '' : 'error' %>">ед.измер</p>
                        <select name = "unityMeter" id = "unityMeter">
                            <option value = "">выберите ед.изм</option>
                            <% unity.forEach((item) => { %>
                                <% if(overhead.unityMeter == item.value) { %>
                                    <option selected value = <%- item.value %>><%= item.name %></option>
                                <% } else { %>
                                    <option value = <%- item.value %>><%= item.name %></option>
                                <% } %>
                            <% }) %>
                        </select>
                        <p class = "<%- (overhead.quantityMaterial || notFill) ? '' : 'error' %>">количество</p>
                        <input value = "<%- (overhead.quantityMaterial) ? overhead.quantityMaterial : '' %>" type = "number" name = "quantityMaterial" id = "quantityMaterial">
                        <p class = "<%- (overhead.colorMaterial || notFill) ? '' : 'error' %>">цвет</p>
                        <input value = "<%- (overhead.colorMaterial) ? overhead.colorMaterial : '' %>" type = "text" name = "colorMaterial" id = "colorMaterial">
                        <p class = "<%- (overhead.sumMaterial || notFill) ? '' : 'error' %>">сумма</p>
                        <input value = "<%- (overhead.sumMaterial) ? overhead.sumMaterial : '' %>" type = "number" name = "sumMaterial" id = "sumMaterial">
                        <p class = "<%- (overhead.enterCodeMaterial || notFill) ? '' : 'error' %>">код поступление</p>
                        <select name = "enterCodeMaterial" id = "enterCodeMaterial">
                            <option value = "">выберите код поступление</option>
                            <% enterCode.forEach((item) => { %>
                                <% if(overhead.enterCodeMaterial == item.value) { %>
                                    <option selected value = <%- item.value %>><%= item.name %></option>
                                <% } else { %>
                                    <option value = <%- item.value %>><%= item.name %></option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class = "buttonCont">
                    <a class = "cancel cancelHover" href = "./">назад</a>
                    <input class = "submit buttonHover" type = "submit" value = "добавить">
                </div>
            </form>
        </div>
    </div>
</body>
</html>