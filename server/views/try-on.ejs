<%- include('head') %>
<body>
    <div class = "cont">
        <div class = "overflow">
            <div class = "head">
                <a href = "/profile/" class = "hItem">клиент</a>
                <a href = "/order/" class = "hItem">закази</a>
                <a href = "/try-on/" class = "active">примерка</a>
                <a href = "/balance/" class = "hItem">баланс клиента</a>
                <a href = "/entered-materials/" class = "hItem">поступивший материал</a>
                <a href = "/overhead-list/" class = "hItem">склад</a>
                <a href = "" class = "hItem">услуги</a>
                <a href = "" class = "hItem">расходы</a>
                <a href = "" class = "hItem">сост ... склад</a>
            </div>
            <div class = "title">
                <h1>примерка</h1>
            </div>
            <div class = "spreadsheetContTitle">
                <div class = "spreadsheetItem">
                    <div class = "spreadsheetT">№</div>
                </div>
                <div class = "spreadsheetItem">
                    <div class = "spreadsheetT">дата примерки</div>
                </div>
                <div class = "spreadsheetItem">
                    <div class = "spreadsheetT">тип примерки</div>
                </div>
                <div class = "spreadsheetItem">
                    <div class = "spreadsheetT">клиент</div>
                </div>
                <div class = "spreadsheetItem">
                    <div class = "spreadsheetT">примечание</div>
                </div>
                <div class = "spreadsheetItem">
                    <div class = "spreadsheetT">код заказа</div>
                </div>
            </div>
            <% try_onFromDb.forEach((item, i) => { %>
                <div class = "spreadsheetCont">
                    <div class = "spreadsheetItem">
                        <div class = "spreadsheetV"><%- i + 1 + next - limit %></div>
                    </div>
                    <div class = "spreadsheetItem">
                        <div class = "spreadsheetV debt"><%= new Date(item.date).toISOString().slice(0, 10) %></div>
                    </div>
                    <div class = "spreadsheetItem">
                        <div class = "spreadsheetV"><%= item.typeTryOn %></div>
                    </div>
                    <div class = "spreadsheetItem">
                        <div class = "spreadsheetV"><%= item.client.name %></div>
                    </div>
                    <div class = "spreadsheetItem">
                        <div class = "spreadsheetV"><%= item.notice %></div>
                    </div>
                    <div class = "spreadsheetItem">
                        <div class = "spreadsheetV"><%= item.orderNumber %></div>
                    </div>
                </div>
            <% }) %>
            <%- include('pagination') %>
        </div>

    </div>
</body>
<script>
    
spreadsheetCont = document.getElementsByClassName('spreadsheetCont')

const startFunc = () => {
    for (let i = 0; i < spreadsheetCont.length; i++ ) {
        i % 2 !== 0 && spreadsheetCont[i].classList.add('white')
    }
} 

document.addEventListener('DOMContentLoaded', startFunc)
</script>
</html>